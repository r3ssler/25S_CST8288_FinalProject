<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Archetype Created Web Application</display-name>

  <welcome-file-list>
    <welcome-file>/jsp/index.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>UsageManagementServlet</servlet-name>
    <servlet-class>com.algonquin.www.controller.UsageManagementServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UsageManagementServlet</servlet-name>
    <url-pattern>/usage/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UserManagementServlet</servlet-name>
    <servlet-class>com.algonquin.www.controller.UserManagementServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserManagementServlet</servlet-name>
    <url-pattern>/user/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>VehicleManagementServlet</servlet-name>
    <servlet-class>com.algonquin.www.controller.VehicleManagementServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>VehicleManagementServlet</servlet-name>
    <url-pattern>/vehicle/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LayoutComponentServlet</servlet-name>
    <servlet-class>com.algonquin.www.controller.LayoutComponentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LayoutComponentServlet</servlet-name>
    <url-pattern>/layout/*</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>MaintenanceManagementServlet</servlet-name>
    <servlet-class>com.algonquin.www.controller.MaintenanceManagementServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MaintenanceManagementServlet</servlet-name>
    <url-pattern>/maintenance/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.algonquin.www.common.filter.AuthFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>
